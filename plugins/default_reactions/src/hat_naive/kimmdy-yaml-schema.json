{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "$id": "https://raw.githubusercontent.com/hits-mbm-dev/kimmdy/main/plugins/default_reactions/src/hat_naive/kimmdy-yaml-schema.json",
  "description": "Settings for naive HAT reaction",
  "additionalProperties": false,
  "properties": {
    "frequency_factor": {
      "type": "number",
      "description": "Frequency factor",
      "pytype": "float",
      "default": 1,
      "minimum": 1
    },
    "h_cutoff": {
      "type": "number",
      "description": "Cutoff for H atom",
      "pytype": "float",
      "default": 4
    },
    "polling_rate": {
      "type": "number",
      "description": "Polling rate",
      "pytype": "float",
      "default": 1
    },
    "kmc": {
      "description": "KMC algorithm for this reaction.",
      "type": "string",
      "pytype": "str",
      "enum": ["rfkmc", "frm", "extrande",  "extrande_mod"],
      "default": "extrande_mod"
    }
  },
  "required": [  ]
}


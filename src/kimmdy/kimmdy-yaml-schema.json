{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "dryrun": {
      "description": "(false) Don't run the actual simulations, just print the tasks",
      "type": "boolean",
      "pytype": "bool",
      "default": false
    },
    "cwd": {
      "description": "(.) Working directory",
      "type": "string",
      "pytype": "Path",
      "default": "."
    },
    "out": {
      "description": "Output directory",
      "type": "string",
      "pytype": "Path"
    },
    "name": {
      "description": "(kimmdy) Name. Used for output folder if out is not specified",
      "type": "string",
      "pytype": "str",
      "default": "kimmdy"
    },
    "iterations": {
      "description": "(1) Number of iterations to run",
      "type": "integer",
      "pytype": "int",
      "default": 1,
      "exclusiveMinimum": 0
    },
    "run": {
      "description": "(1) Replica number",
      "type": "integer",
      "pytype": "int",
      "default": "1"
    },
    "out": {
      "description": "(kimmdy) Output folder",
      "type": "string",
      "pytype": "Path",
      "default": "kimmdy"
    },
    "top": {
      "description": "(topol.top) Topology file",
      "type": "string",
      "pytype": "Path",
      "default": "topol.top"
    },
    "gro": {
      "description": "(conf.gro) Coordinate file",
      "type": "string",
      "pytype": "Path",
      "default": "conf.gro"
    },
    "ndx": {
      "description": "(index.ndx) Index file",
      "type": "string",
      "pytype": "Path",
      "default": "index.ndx"
    },
    "gromacs_alias": {
      "description": "(gmx) Gromacs alias",
      "type": "string",
      "pytype": "str",
      "default": "gmx"
    },
    "ff": {
      "description": "(looks for .ff in cwd) Force field directory",
      "type": "string",
      "pytype": "Path"
    },
    "mds": {
      "type": "object",
      "description": "Settings for MD steps, e.g. mdp files, plumed files, etc.",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "mdp": {
              "type": "string",
              "pytype": "Path",
              "description": "MDP file for the MD step"
            },
            "prefix": {
              "type": "string",
              "pytype": "str",
              "description": "TODO: What is this?"
            },
            "overwrite": {
              "type": "string",
              "pytype": "str",
              "description": "TODO: What is this?"
            },
            "plumed": {
              "type": "object",
              "properties": {
                "dat": {
                  "type": "string",
                  "pytype": "Path"
                },
                "distances": {
                  "type": "string",
                  "pytype": "str"
                }
              },
              "required": ["dat", "distances"],
              "additionalProperties": false
            }
          },
          "required": ["mdp"],
          "additionalProperties": false
        }
      }
    },
    "changer": {
      "type": "object",
      "description": "Settings for the coordinate changer",
      "properties": {
        "coordinates": {
          "type": "object",
          "properties": {
            "md": {
              "type": "string",
              "pytype": "str"
            },
            "md_parameter_growth": {
              "type": "string",
              "pytype": "str"
            }
          }
        }
      }
    },
    "sequence": {
      "type": "array",
      "pytype": "Sequence"
    },
    "reactions": {
      "type": "object",
      "description": "Settings for reactions",
      "properties": {
        "homolysis": {
          "$ref": "../../plugins/src/homolysis/kimmdy-yaml-schema.json"
        },
        "hat_naive": {
          "$ref": "../../plugins/src/hat_naive/kimmdy-yaml-schema.json"
        },
        "dummyreaction": {
          "$ref": "../../plugins/src/dummyreaction/kimmdy-yaml-schema.json"
        }
      },
      "patternProperties": {
        ".*": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "example_property_for_all_reactions": {
              "description": "This property can be set for any reaction",
              "type": "number",
              "pytype": "float"
            }
          },
          "required": []
        }
      }
    }
  },
  "required": ["name", "sequence" ]
}
